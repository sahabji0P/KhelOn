<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cricketLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/khelon_background_image"
    tools:context=".football.FootballActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/application_header_bg"
        android:elevation="100dp"
        android:id="@+id/footballHeader"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/footballBackbtn"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:src="@drawable/go_back"
            android:contentDescription="@string/ContentDescriptions" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Football"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            tools:ignore="HardcodedText" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/footballHeader">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/footballTabLayout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/khelon_background_image"
            app:tabTextColor="@color/white"
            app:tabSelectedTextColor="@color/red"
            app:tabIndicatorColor="@color/red"
            app:tabRippleColor="@color/app_header"
            tools:ignore="SpeakableTextPresentCheck" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/footballViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/footballTabLayout"
            tools:ignore="SpeakableTextPresentCheck" />

    </RelativeLayout>



</RelativeLayout>
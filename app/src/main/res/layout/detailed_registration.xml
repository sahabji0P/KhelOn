<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/khelon_background_image"
    tools:context=".registration.RegistrationDetailed">

    <TextView
        android:id="@+id/registrationPostTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrations"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/registrationPostDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_margin="50dp"
        android:textSize="22sp"
        android:textColor="@color/white"
        />

</LinearLayout>